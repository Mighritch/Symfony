{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des événements</h1>
            
            <div>
                <a href="{{ path('event_new') }}" class="btn btn-success">
                    <i class="fas fa-plus"></i> Créer un événement
                </a>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <form method="get" action="{{ path('event_index') }}" class="form-inline">
                    <div class="input-group w-100">
                        <input type="text" 
                               name="q" 
                               class="form-control" 
                               placeholder="Rechercher par titre..." 
                               value="{{ searchTerm ?? '' }}"
                               aria-label="Rechercher">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Rechercher
                            </button>
                            {% if searchTerm %}
                                <a href="{{ path('event_index') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i> Effacer
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </form>
            </div>
        </div>

        {% if searchTerm and events is empty %}
            <div class="alert alert-info">
                Aucun événement trouvé pour "{{ searchTerm }}"
            </div>
        {% endif %}

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Lieu</th>
                        <th>Places</th>
                        <th>Prix</th>
                        <th>Catégorie</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.titre }}</td>
                        <td>{{ event.description|slice(0, 50) }}{% if event.description|length > 50 %}...{% endif %}</td>
                        <td>{{ event.date|date('d/m/Y H:i') }}</td>
                        <td>{{ event.emplacement }}</td>
                        <td>{{ event.nombrePlaces }}</td>
                        <td>{{ event.prix }} €</td>
                        <td>{{ event.category.titre }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                {{ include('event/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Aucun événement disponible</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}